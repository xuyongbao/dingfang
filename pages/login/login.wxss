/* pages/login/login.wxss */
page{
  background: #f1f1f1;
}
.navTop{
  width:100%;
  display:flex;
  background: #fff;
  flex-direction:row;
  margin-bottom: 20rpx;
}
.top_select{
  flex:1;
  color:#888;
  font-size:30rpx;
  text-align:center;
  line-height:80rpx;
  border-bottom: 6rpx solid #fff;
}
.top_select.active{
  color:#444;
  border-color: #666;
}
.navBody{
  background: #fff;
  padding: 10rpx 30rpx;
}
.navBody .title{
  font-size: 28rpx;
  line-height: 50rpx;
} 
.form_view{
  height:74rpx;
  line-height: 74rpx;
  border-bottom: 1rpx solid #ccc;
}
.form_view.borderNone{
  border-bottom: none;
}
.form_view text{
  font-size: 26rpx;
}
.form_view input{
  height: 100%; 
  font-size: 26rpx;
}
.form_view button{
  padding: 0;
  height: 66rpx; 
  margin-top: 5rpx;
  font-size: 26rpx;
  background: none;
  line-height: 66rpx;
  border: 1rpx solid #888;
}
.submit{
  color: #fff;
  height: 80rpx;
  margin: 20rpx 0;
  font-size: 30rpx;
  background: #fb586e;
}



.flex{
  display: flex;
}
.flex2{
  flex: 2;
}
.flex4{
  flex: 4;
}
.flex5{
  flex: 5;
}
.flex8{
  flex: 8;
}
/* 弹窗toast */
.toast_diy{
  position: fixed;
  top:50%;
  left:50%;
  height:128rpx;
  width:370rpx;
  margin:-64rpx 0  0 -185rpx;
  background: rgba(17,17,17,.8);
  z-index: 9;
  border-radius: 16rpx;
  line-height: 128rpx;
  text-align: center;
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #FFFFFF;
}
.toast_diy text{
  display: block;
  
}
.flex5{
  flex: 5;
}